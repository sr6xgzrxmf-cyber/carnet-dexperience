import Link from "next/link";
import { cookies } from "next/headers";
import { prisma } from "@/lib/db";
import { STEPS, TOTAL_STEPS } from "@/lib/atelier/steps";
import { submitStep } from "../actions";

export default async function StepPage({
  params,
}: {
  params: Promise<{ step: string }>;
}) {
  const { step: stepParam } = await params;
  const step = Math.max(1, Math.min(TOTAL_STEPS, Number(stepParam) || 1));
  const cfg = STEPS.find((s) => s.id === step) ?? STEPS[0];
  const left = Math.max(0, TOTAL_STEPS - step);

  const cookieStore = await cookies();
  const id = cookieStore.get("atelier_submission_id")?.value;

  if (!id) {
    return (
      <section className="mx-auto max-w-2xl">
        <h1 className="text-2xl font-semibold tracking-tight">Session introuvable</h1>
        <p className="mt-2 text-sm text-neutral-600 dark:text-neutral-400">
          Reprends avec ton email + ton code.
        </p>
        <div className="mt-4">
          <Link className="underline underline-offset-4" href="/atelier/fiche/reprendre">
            Reprendre
          </Link>
        </div>
      </section>
    );
  }

  const sub = await prisma.submission.findUnique({ where: { id } });
  const data = (sub?.data ?? {}) as Record<string, string>;

  return (
    <section className="mx-auto max-w-2xl">
      <div className="text-xs text-neutral-500">
        Étape {step}/{TOTAL_STEPS} — il reste {left} étape{left > 1 ? "s" : ""}
      </div>

      <div className="mt-3 h-2 w-full rounded-full bg-neutral-200 dark:bg-neutral-800 overflow-hidden">
        <div
          className="h-full bg-neutral-900 dark:bg-neutral-100"
          style={{ width: `${Math.round((step / TOTAL_STEPS) * 100)}%` }}
        />
      </div>

      <h1 className="mt-6 text-2xl font-semibold tracking-tight">{cfg.title}</h1>
      {cfg.hint ? (
        <p className="mt-2 text-sm text-neutral-600 dark:text-neutral-400">{cfg.hint}</p>
      ) : null}

      <form action={submitStep.bind(null, step)} className="mt-6 space-y-4">
        {cfg.fields.map((f, idx) => {
          const value = data?.[f.name] ?? "";
          const kind = f.kind ?? "input";

          return (
            <label
              key={f.name ?? f.id ?? idx}
              className="block text-sm text-neutral-700 dark:text-neutral-300"
            >
              {f.label}
              {kind === "textarea" ? (
                <textarea
                  name={f.name}
                  required
                  defaultValue={value}
                  className="mt-2 min-h-[180px] w-full rounded-2xl border border-neutral-200 dark:border-neutral-800 bg-white/70 dark:bg-neutral-950/15 p-4 text-sm"
                  placeholder={f.placeholder ?? ""}
                />
              ) : (
                <input
                  name={f.name}
                  required
                  defaultValue={value}
                  className="mt-2 w-full rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white/70 dark:bg-neutral-950/15 px-4 py-3 text-sm"
                  placeholder={f.placeholder ?? ""}
                />
              )}
            </label>
          );
        })}

        <button className="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-950/30 px-4 py-2 text-sm hover:bg-neutral-50 dark:hover:bg-neutral-950/50">
          Valider cette étape
        </button>

        <p className="text-xs text-neutral-500">
          Pas de spam. Un seul mail par étape.
        </p>
      </form>
    </section>
  );
}
